{
  "name": "tsmartquality-api",
  "version": "1.0.0",
  "description": "TSmart Quality API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build": "tsc && npm run build:api",
    "build:api": "tsc api/index.ts --outDir api --target es2020 --module commonjs --moduleResolution node --esModuleInterop --skipLibCheck --declaration false",
    "vercel-build": "npm run build",
    "postinstall": "echo 'Dependencies installed'",
    "clean": "rm -rf dist && rm -rf api/index.js && rm -rf coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:security": "jest tests/security",
    "test:performance": "jest tests/performance",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:specific": "jest --testNamePattern=",
    "test:security-scan": "node tests/security-scan.js",
    "test:load": "npm run test:performance",
    "test:all": "npm run lint && npm run test:ci && npm run test:security-scan",
    "local:dev": "ts-node api/index.ts",
    "local:test": "node test-deployment.js --local"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/crypto-js": "^4.2.2",
    "@types/joi": "^17.2.2",
    "@types/qrcode": "^1.5.5",
    "@types/sharp": "^0.31.1",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.2",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
