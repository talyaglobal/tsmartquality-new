{
  "name": "tsmartquality-api",
  "version": "1.0.0",
  "description": "TSmart Quality API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build": "tsc && npm run build:api",
    "build:api": "tsc api/index.ts --outDir api --target es2020 --module commonjs --moduleResolution node --esModuleInterop --skipLibCheck --declaration false",
    "vercel-build": "npm run build",
    "postinstall": "echo 'Dependencies installed'",
    "clean": "rm -rf dist && rm -rf api/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "local:dev": "ts-node api/index.ts",
    "local:test": "node test-deployment.js --local"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}